---
import { ExternalLink } from "lucide-react";
import ExperienceList from "@/components/astro-ui-components/ExperienceList.astro";
---

<section class="w-full mt-36 scroll-mt-32" id="experience">
  <div class="flex flex-col items-center gap-5">
    <span class="bg-hiyo-purple text-white p-2 text-5xl font-bold"
      >experience.</span
    >
    <ExperienceList />
    <a
      href="https://flowcv.com/resume/8tva6o2rts"
      target="_blank"
      rel="noopener noreferrer"
      class="flex gap-2 font-bold text-black transition-all duration-100 hover:text-gray-600 hover:scale-105 hover:transition-all hover:duration-100"
      >View full resume <ExternalLink /></a
    >
  </div>
</section>
