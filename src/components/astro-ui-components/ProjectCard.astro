---
import type { Project } from "@/components/astro-ui-components/ProjectList.astro";
interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<a
  href={project.link}
  class="bg-white w-[40vw] md:h-[70vh] 2xl:h-[60vh] rounded-2xl shadow-lg flex flex-col overflow-hidden transform transition duration-300 hover:scale-[0.98] hover:bg-gray-100"
  target="_blank"
  rel="noopener noreferrer"
>
  <img
    src={project.image}
    alt={`Image for ${project.title}`}
    class="md:h-1/3 2xl:h-1/2 w-full object-cover"
  />
  <div class="flex flex-col p-5 space-y-3 flex-grow justify-between">
    <div>
      <h2 class="md:text-md xl:text-lg font-bold">
        {project.title}
      </h2>
      <h3 class="md:text-sm xl:text-md">{project.duration}</h3>
      <ul class="list-disc pl-5 overflow-auto">
        {
          project.description.map((sentence) => (
            <li class="md:text-xs xl:text-sm">{sentence}</li>
          ))
        }
      </ul>
    </div>
    <div class="flex flex-wrap gap-2">
      {
        project.tools.map((tool) => (
          <div class="bg-hiyo-purple rounded-xl px-2 text-center">
            <span class="text-light-purple text-xs">{tool}</span>
          </div>
        ))
      }
    </div>
  </div>
</a>
