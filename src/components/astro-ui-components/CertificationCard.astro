---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import type { Certification } from '@/data/certifications';

interface Props {
  certification: Certification;
}

const { certification } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/**/*.{jpeg,jpg,png,gif,svg}'
);

const logoPath = `/src/assets/${certification.issuerLogo}`;

if (!images[logoPath]) {
  throw new Error(
    `"${logoPath}" does not exist in glob: "/src/assets/**/*.{jpeg,jpg,png,gif,svg}"`
  );
}
---

<div class="certification-card h-full">
  <div
    class="card-inner bg-white rounded-xl shadow-lg overflow-hidden h-full flex flex-col transform transition-all duration-500 hover:shadow-2xl"
  >
    <div class="flex items-center p-5 border-b border-gray-100">
      <div class="mr-4">
        <div
          class="logo-container rounded-full bg-white shadow-md relative overflow-hidden w-14 h-14 flex items-center justify-center"
        >
          <Image
            src={images[logoPath]()}
            alt={`${certification.issuer} logo`}
            width={42}
            height={42}
            class="logo-image"
          />
        </div>
      </div>

      <div class="flex-grow mr-3">
        <a href={certification.url} target="_blank" rel="noopener noreferrer" class="mb-2">
          <h3 class="text-lg font-bold text-gray-800 hover-effect">{certification.title}</h3>
          <p class="text-sm text-gray-500">{certification.issuer}</p>
          <p class="text-xs text-gray-400 flex items-center mt-0.5">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3 mr-1"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"
              ></path>
              <path
                fill-rule="evenodd"
                d="M4 5a2 2 0 012-2v1a1 1 0 001 1h6a1 1 0 001-1V3a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm8 8a1 1 0 100-2 1 1 0 000 2zm-3-1a1 1 0 11-2 0 1 1 0 012 0zm-2-3a1 1 0 100-2 1 1 0 000 2zm3-1a1 1 0 11-2 0 1 1 0 012 0zm3-1a1 1 0 100-2 1 1 0 000 2z"
                clip-rule="evenodd"></path>
            </svg>
            ID: {certification.certificationId}
          </p>
        </a>
      </div>

      <div
        class="date-badge flex-shrink-0 text-xs font-medium text-purple-700 bg-purple-50 py-1 px-3 rounded-full border border-purple-100"
      >
        {certification.validFrom} - {certification.validUntil}
      </div>
    </div>

    <div class="p-5 flex-grow flex flex-col">
      <ul class="space-y-3 text-gray-600 text-sm flex-grow">
        {
          certification.description.map(item => (
            <li class="flex items-start list-item-hover">
              <span class="text-hiyo-purple mr-2 pt-0.5">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
              <span>{item}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>

<style>
  .card-inner {
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 1px solid rgba(229, 231, 235, 0.5);
  }

  .card-inner:hover {
    transform: translateY(-8px);
    border-color: rgba(167, 139, 250, 0.4);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .hover-effect {
    position: relative;
    display: inline;
    background-image: linear-gradient(to right, #a855f7, #6366f1);
    background-position: 0 100%;
    background-repeat: no-repeat;
    background-size: 0% 2px;
    transition: background-size 0.3s ease;
    padding-bottom: 2px;
  }

  .certification-card:hover .hover-effect {
    background-size: 100% 2px;
  }

  .list-item-hover {
    transition: transform 0.2s ease;
  }

  .list-item-hover:hover {
    transform: translateX(3px);
  }

  .date-badge {
    white-space: nowrap;
    position: relative;
    overflow: hidden;
  }

  .date-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: all 0.5s;
  }

  .card-inner:hover .date-badge::before {
    left: 100%;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
  }
</style>
