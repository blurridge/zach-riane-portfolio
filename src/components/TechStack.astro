---
import { Image } from 'astro:assets';
---

<section class="w-full mt-10 mb-10">
  <div class="flex flex-col items-center gap-5">
    <span class="bg-hiyo-purple text-white px-3 text-3xl sm:text-5xl font-bold">tools.</span>
    <div class="max-w-6xl mx-auto px-4 py-8">
      <!-- Data Analysis and Machine Learning -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Data Analysis and Machine Learning
        </h3>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://www.python.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/python/python-original.svg"
              alt="python"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://pytorch.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/pytorch/pytorch-icon.svg"
              alt="pytorch"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://www.tensorflow.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/tensorflow/tensorflow-icon.svg"
              alt="tensorflow"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://www.mysql.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/mysql/mysql-icon.svg"
              alt="sql"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://pandas.pydata.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/2ae2a900d2f041da66e950e4d48052658d850630/icons/pandas/pandas-original.svg"
              alt="pandas"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://www.selenium.dev" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/detain/svg-logos/780f25886640cef088af994181646db2f6b1a3f8/svg/selenium-logo.svg"
              alt="selenium"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://beautiful-soup-4.readthedocs.io/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://www.crummy.com/software/BeautifulSoup/bs4/doc/_images/6.1.jpg"
              alt="beautifulsoup"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://scikit-learn.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://upload.wikimedia.org/wikipedia/commons/0/05/Scikit_learn_logo_small.svg"
              alt="scikit_learn"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://seaborn.pydata.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://seaborn.pydata.org/_images/logo-mark-lightbg.svg"
              alt="seaborn"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>
      </div>

      <!-- Web Development -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Web Development
        </h3>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Frontend</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center mb-8">
          <a href="https://www.w3.org/html/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/html5/html5-original-wordmark.svg"
              alt="html5"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://www.w3schools.com/css/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/css3/css3-original-wordmark.svg"
              alt="css3"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/javascript/javascript-original.svg"
              alt="javascript"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://www.typescriptlang.org/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/typescript/typescript-original.svg"
              alt="typescript"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://reactjs.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/react/react-original-wordmark.svg"
              alt="react"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://nextjs.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://cdn.worldvectorlogo.com/logos/nextjs-2.svg"
              alt="next.js"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://tailwindcss.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/tailwindcss/tailwindcss-icon.svg"
              alt="tailwind"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Backend</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://nodejs.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/nodejs/nodejs-original-wordmark.svg"
              alt="nodejs"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://expressjs.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/express/express-original-wordmark.svg"
              alt="express"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://fastapi.tiangolo.com/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://icon.icepanel.io/Technology/svg/FastAPI.svg"
              alt="fastapi"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://www.djangoproject.com/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://cdn.worldvectorlogo.com/logos/django.svg"
              alt="django"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>
      </div>

      <!-- Mobile Development -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Mobile Development
        </h3>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://reactnative.dev/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://d33wubrfki0l68.cloudfront.net/554c3b0e09cf167f0281fda839a5433f2040b349/ecfc9/img/header_logo.svg"
              alt="react native"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://kotlinlang.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/kotlinlang/kotlinlang-icon.svg"
              alt="kotlin"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://expo.dev/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.svgrepo.com/show/341805/expo.svg"
              alt="expo"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>
      </div>

      <!-- Database and Storage -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Database and Storage
        </h3>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://www.postgresql.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/postgresql/postgresql-original-wordmark.svg"
              alt="postgresql"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://supabase.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/supabase/supabase-icon.svg"
              alt="supabase"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://firebase.google.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/firebase/firebase-icon.svg"
              alt="firebase"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://redis.io" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/redis/redis-original-wordmark.svg"
              alt="redis"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://aws.amazon.com/s3/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://icon.icepanel.io/AWS/svg/Storage/Simple-Storage-Service.svg"
              alt="aws s3"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://aws.amazon.com/rds/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://icon.icepanel.io/AWS/svg/Database/RDS.svg"
              alt="aws rds"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://cloud.google.com/bigquery"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://www.vectorlogo.zone/logos/google_bigquery/google_bigquery-icon.svg"
              alt="bigquery"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>
      </div>

      <!-- Other Technologies -->
      <div>
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Other Technologies
        </h3>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Languages</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center mb-8">
          <a href="https://www.java.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/java/java-original.svg"
              alt="java"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://www.cprogramming.com/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/c/c-original.svg"
              alt="c"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a
            href="https://www.w3schools.com/cpp/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/cplusplus/cplusplus-original.svg"
              alt="cplusplus"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Cloud Platforms</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center mb-8">
          <a
            href="https://azure.microsoft.com/en-in/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src="https://www.vectorlogo.zone/logos/microsoft_azure/microsoft_azure-icon.svg"
              alt="azure"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://aws.amazon.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://raw.githubusercontent.com/devicons/devicon/master/icons/amazonwebservices/amazonwebservices-original-wordmark.svg"
              alt="aws"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">UI/UX</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://www.figma.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://www.vectorlogo.zone/logos/figma/figma-icon.svg"
              alt="figma"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
          <a href="https://storybook.js.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image
              src="https://cdn.worldvectorlogo.com/logos/storybook-1.svg"
              alt="storybook"
              width="60"
              height="60"
              class="tech-logo"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tech-item {
    @apply flex items-center justify-center;
    @apply hover:scale-110 transition-all;
    @apply p-2 rounded-lg hover:bg-purple-50;
    width: 80px;
    height: 80px;
  }

  .tech-logo {
    max-width: 60px;
    max-height: 60px;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  @media (max-width: 640px) {
    .tech-item {
      width: 60px;
      height: 60px;
    }

    .tech-logo {
      max-width: 40px;
      max-height: 40px;
    }
  }
</style>
