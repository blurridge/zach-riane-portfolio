---
import { Image } from 'astro:assets';

import python from '../assets/tech-icons/Python.svg';
import pytorch from '../assets/tech-icons/pytorch-icon.svg';
import tensorflow from '../assets/tech-icons/tensorflow-icon.svg';
import mysql from '../assets/tech-icons/mysql-icon.svg';
import pandas from '../assets/tech-icons/Pandas.svg';
import selenium from '../assets/tech-icons/Selenium.svg';
import beautifulSoup from '../assets/tech-icons/6.1.jpg';
import scikitLearn from '../assets/tech-icons/scikit-learn.svg';
import seaborn from '../assets/tech-icons/seaborn.svg';
import html5 from '../assets/tech-icons/HTML5.svg';
import css3 from '../assets/tech-icons/CSS3.svg';
import javascript from '../assets/tech-icons/JavaScript.svg';
import typescript from '../assets/tech-icons/TypeScript.svg';
import react from '../assets/tech-icons/React.svg';
import nextjs from '../assets/tech-icons/nextjs-2.svg';
import tailwind from '../assets/tech-icons/tailwindcss-icon.svg';
import nodejs from '../assets/tech-icons/Node.js.svg';
import express from '../assets/tech-icons/Express.svg';
import fastapi from '../assets/tech-icons/FastAPI.svg';
import django from '../assets/tech-icons/django.svg';
import nestjs from '../assets/tech-icons/nestjs.svg';
import reactNative from '../assets/tech-icons/header_logo.svg';
import kotlin from '../assets/tech-icons/kotlinlang-icon.svg';
import expo from '../assets/tech-icons/expo.svg';
import postgresql from '../assets/tech-icons/PostgresSQL.svg';
import supabase from '../assets/tech-icons/supabase-icon.svg';
import firebase from '../assets/tech-icons/firebase-icon.svg';
import redis from '../assets/tech-icons/Redis.svg';
import awsS3 from '../assets/tech-icons/Simple-Storage-Service.svg';
import awsRds from '../assets/tech-icons/RDS.svg';
import bigquery from '../assets/tech-icons/google_bigquery-icon.svg';
import java from '../assets/tech-icons/Java.svg';
import c from '../assets/tech-icons/C.svg';
import cplusplus from '../assets/tech-icons/C++ (CPlusPlus).svg';
import azure from '../assets/tech-icons/microsoft_azure-icon.svg';
import aws from '../assets/tech-icons/AWS.svg';
import gcp from '../assets/tech-icons/GCP.svg';
import vertexAi from '../assets/tech-icons/vertex_ai.png';
import figma from '../assets/tech-icons/figma-icon.svg';
import storybook from '../assets/tech-icons/storybook-1.svg';
---

<section class="w-full mt-10 mb-10">
  <div class="flex flex-col items-center gap-5">
    <span class="bg-hiyo-purple text-white px-3 text-3xl sm:text-5xl font-bold">tools.</span>
    <div class="max-w-6xl mx-auto px-4 py-8">
      <!-- Data Analysis and Machine Learning -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Data Analysis and Machine Learning
        </h3>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://www.python.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={python} alt="Python" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://pytorch.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={pytorch} alt="PyTorch" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://www.tensorflow.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={tensorflow} alt="TensorFlow" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://cloud.google.com/vertex-ai"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={vertexAi} alt="Vertex AI" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://pandas.pydata.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={pandas} alt="Pandas" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://www.selenium.dev" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={selenium} alt="Selenium" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://beautiful-soup-4.readthedocs.io/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image
              src={beautifulSoup}
              alt="BeautifulSoup"
              width={60}
              height={60}
              class="tech-logo"
            />
          </a>
          <a href="https://scikit-learn.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={scikitLearn} alt="Scikit-learn" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://seaborn.pydata.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={seaborn} alt="Seaborn" width={60} height={60} class="tech-logo" />
          </a>
        </div>
      </div>

      <!-- Web Development -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Web Development
        </h3>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Frontend</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center mb-8">
          <a href="https://www.w3.org/html/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={html5} alt="HTML5" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://www.w3schools.com/css/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={css3} alt="CSS3" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={javascript} alt="JavaScript" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://www.typescriptlang.org/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={typescript} alt="TypeScript" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://reactjs.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={react} alt="React" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://nextjs.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={nextjs} alt="Next.js" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://tailwindcss.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={tailwind} alt="Tailwind CSS" width={60} height={60} class="tech-logo" />
          </a>
        </div>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Backend</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://nodejs.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={nodejs} alt="Node.js" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://expressjs.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={express} alt="Express" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://nestjs.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={nestjs} alt="NestJS" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://fastapi.tiangolo.com/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={fastapi} alt="FastAPI" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://www.djangoproject.com/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={django} alt="Django" width={60} height={60} class="tech-logo" />
          </a>
        </div>
      </div>

      <!-- Mobile Development -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Mobile Development
        </h3>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://reactnative.dev/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={reactNative} alt="React Native" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://kotlinlang.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={kotlin} alt="Kotlin" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://expo.dev/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={expo} alt="Expo" width={60} height={60} class="tech-logo" />
          </a>
        </div>
      </div>

      <!-- Database and Storage -->
      <div class="mb-10">
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Database and Storage
        </h3>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://www.mysql.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={mysql} alt="MySQL" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://www.postgresql.org" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={postgresql} alt="PostgreSQL" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://supabase.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={supabase} alt="Supabase" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://firebase.google.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={firebase} alt="Firebase" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://redis.io" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={redis} alt="Redis" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://aws.amazon.com/s3/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={awsS3} alt="AWS S3" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://aws.amazon.com/rds/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={awsRds} alt="AWS RDS" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://cloud.google.com/bigquery"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={bigquery} alt="BigQuery" width={60} height={60} class="tech-logo" />
          </a>
        </div>
      </div>

      <!-- Other Technologies -->
      <div>
        <h3
          class="text-xl font-semibold mb-5 text-center bg-purple-50 text-purple-800 py-2 rounded-lg"
        >
          Other Technologies
        </h3>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Languages</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center mb-8">
          <a href="https://www.java.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={java} alt="Java" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://www.cprogramming.com/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={c} alt="C" width={60} height={60} class="tech-logo" />
          </a>
          <a
            href="https://www.w3schools.com/cpp/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={cplusplus} alt="C++" width={60} height={60} class="tech-logo" />
          </a>
        </div>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">Cloud Platforms</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center mb-8">
          <a
            href="https://azure.microsoft.com/en-in/"
            target="_blank"
            rel="noreferrer"
            class="tech-item"
          >
            <Image src={azure} alt="Azure" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://aws.amazon.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={aws} alt="AWS" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://cloud.google.com" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={gcp} alt="Google Cloud Platform" width={60} height={60} class="tech-logo" />
          </a>
        </div>

        <h4 class="text-lg font-medium text-gray-700 mb-3 text-center">UI/UX</h4>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <a href="https://www.figma.com/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={figma} alt="Figma" width={60} height={60} class="tech-logo" />
          </a>
          <a href="https://storybook.js.org/" target="_blank" rel="noreferrer" class="tech-item">
            <Image src={storybook} alt="Storybook" width={60} height={60} class="tech-logo" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tech-item {
    @apply flex items-center justify-center;
    @apply transition-all duration-300 ease-in-out;
    @apply p-2 rounded-lg;
    width: 80px;
    height: 80px;
    position: relative;
  }

  .tech-item:hover {
    transform: translateY(-5px) scale(1.12);
    filter: drop-shadow(0 6px 8px rgba(167, 139, 250, 0.3));
  }

  .tech-logo {
    max-width: 60px;
    max-height: 60px;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  @media (max-width: 640px) {
    .tech-item {
      width: 60px;
      height: 60px;
    }

    .tech-logo {
      max-width: 40px;
      max-height: 40px;
    }
  }
</style>
